<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nama Barang : "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toRightOf="@id/nama"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/jumlah_beli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Beli : "
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/tv_harga"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Harga : Rp."
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_nama"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/harga"
            android:layout_below="@+id/tv_nama"
            android:textStyle="italic"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Harga"/>

        <TextView
            android:id="@+id/tv_jumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_harga"
            android:text="1"
            android:layout_toRightOf="@+id/jumlah_beli"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>